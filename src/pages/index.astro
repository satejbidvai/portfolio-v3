---
import MainLayout from '../layouts/main-layout.astro';
import ProfileInfo from '../components/home/profile-info.astro';
import Quote from '../components/home/quote.astro';
import GetInTouch from '../components/home/get-in-touch.astro';
import BlogCard from '../components/blog/blog-card.astro';
import { getAllPosts } from '../utils/blog';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';

const recentPosts = (await getAllPosts()).slice(0, 3);
---

<MainLayout title={SITE_TITLE} description={SITE_DESCRIPTION} url="/" ogImage="/og-image.png">
  <p class="text-muted-foreground mb-4 md:mb-6">Frontend Developer</p>

  <p class="text-foreground leading-relaxed mb-6 md:mb-8">
    You think I've got great attention to detail? No,&nbsp;I've&nbsp;<span class="italic"
      >self&#x2060;-&#x2060;diagnosed</span
    >&nbsp;OCD.
  </p>

  <ProfileInfo />

  <Quote />

  {
    recentPosts.length > 0 && (
      <div class="mt-8 md:mt-12">
        <h2 class="text-lg md:text-xl font-medium mb-3 md:mb-4">
          <a href="/blog" class="hover:text-muted-foreground transition-colors">
            Blog
          </a>
        </h2>
        <div class="space-y-3">
          {recentPosts.map((post) => (
            <BlogCard post={post} />
          ))}
        </div>
        {recentPosts.length > 3 && (
          <div class="mt-6">
            <a href="/blog" class="text-sm text-muted-foreground hover:text-foreground transition-colors">
              View all posts â†’
            </a>
          </div>
        )}
      </div>
    )
  }

  <div class="mt-8 md:mt-12">
    <GetInTouch />
  </div>
</MainLayout>
