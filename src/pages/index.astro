---
import '../styles/global.css'; // TODO: Move to shared layout
import '@fontsource-variable/geist';

import ProfileInfo from '../components/home/profile-info.astro';
import Quote from '../components/home/quote.astro';
import GetInTouch from '../components/home/get-in-touch.astro';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />

    <!-- Favicons -->
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />

    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <!-- Primary Meta Tags -->
    <title>Satej Bidvai</title>
    <meta name="title" content="Satej Bidvai" />
    <meta name="description" content="Portfolio of Satej Bidvai" />
    <meta name="author" content="Satej Bidvai" />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://satejbidvai.com/" />
    <meta property="og:title" content="Satej Bidvai" />
    <meta property="og:description" content="Portfolio of Satej Bidvai" />
    <meta property="og:image" content="https://satejbidvai.com/favicon.ico" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content="https://satejbidvai.com/" />
    <meta name="twitter:title" content="Satej Bidvai" />
    <meta name="twitter:description" content="Portfolio of Satej Bidvai" />
    <meta name="twitter:image" content="https://satejbidvai.com/favicon.ico" />

    <!-- Theme Color -->
    <meta name="theme-color" content="#09090B" />
  </head>

  <body class="mx-auto max-w-lg md:max-w-xl lg:max-w-2xl pb-16 md:pb-20 px-4 md:px-6 bg-background text-foreground">
    <main class="mt-8 md:mt-12">
      <h1 class="text-2xl md:text-3xl font-bold mb-2 leading-none fade-in">
        <span
          class="bg-gradient-to-r from-foreground via-accent-foreground to-muted-foreground bg-clip-text text-transparent"
          >Satej Bidvai</span
        >
      </h1>
      <div class="w-14 h-px bg-border mb-3 fade-in"></div>

      <p class="text-muted-foreground mb-4 md:mb-6 fade-in fade-in-delay-1">Frontend Developer</p>

      <p class="text-foreground leading-relaxed font-medium mb-6 md:mb-8 fade-in fade-in-delay-2">
        You think I've got great attention to detail? No,&nbsp;I've&nbsp;<span class="italic"
          >self&#x2060;-&#x2060;diagnosed</span
        >&nbsp;OCD.
      </p>

      <div class="fade-in fade-in-delay-3">
        <ProfileInfo />
      </div>

      <div class="fade-in fade-in-delay-4">
        <Quote />
      </div>

      <!-- <div class="space-y-4">
        <h3 class="text-xl font-medium">Featured Projects</h3>
        <div class="grid gap-4">
          <article
            class="p-4 rounded-lg border border-primary/20 hover:border-primary/40 transition-colors"
          >
            <h4 class="font-medium">Project One</h4>
            <p class="opacity-75">A brief description of your first featured project.</p>
          </article>
          <article
            class="p-4 rounded-lg border border-primary/20 hover:border-primary/40 transition-colors"
          >
            <h4 class="font-medium">Project Two</h4>
            <p class="opacity-75">A brief description of your second featured project.</p>
          </article>
        </div>
      </div> -->

      <div class="mt-8 md:mt-12 fade-in fade-in-delay-5">
        <GetInTouch />
      </div>
    </main>
  </body>
</html>
